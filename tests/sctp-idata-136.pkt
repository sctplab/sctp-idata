--tolerance_usecs=750000

// Turn off all extensions
 0.0 `sysctl -w net.inet.sctp.ecn_enable=0`
+0.0 `sysctl -w net.inet.sctp.pr_enable=0`
+0.0 `sysctl -w net.inet.sctp.asconf_enable=0`
+0.0 `sysctl -w net.inet.sctp.auth_enable=0`
+0.0 `sysctl -w net.inet.sctp.reconfig_enable=0`
+0.0 `sysctl -w net.inet.sctp.nrsack_enable=0`
+0.0 `sysctl -w net.inet.sctp.pktdrop_enable=0`
// Setup the association with I-DATA support enabled
+0.0 socket(..., SOCK_STREAM, IPPROTO_SCTP) = 3
+0.0 setsockopt(3, IPPROTO_SCTP, SCTP_FRAGMENT_INTERLEAVE, [2], 4) = 0
+0.0 setsockopt(3, IPPROTO_SCTP, SCTP_INTERLEAVING_SUPPORTED, {assoc_value=1}, 8) = 0
+0.0 setsockopt(3, IPPROTO_SCTP, SCTP_RECVRCVINFO, [1], 4) = 0
0.0 setsockopt(3, SOL_SOCKET, SO_RCVBUF, [10000], 4) = 0
+0.0 bind(3, ..., ...) = 0
+0.0 listen(3, 1) = 0
+0.0 < sctp: INIT[flgs=0, tag=1, a_rwnd=15000, os=16, is=16, tsn=1,
                  SUPPORTED_EXTENSIONS[types=[I_DATA]]]
+0.0 > sctp: INIT_ACK[flgs=0, tag=2, a_rwnd=10000, os=..., is=..., tsn=1,
                      SUPPORTED_EXTENSIONS[types=[I_DATA]],
                      STATE_COOKIE[len=..., val=...]]
+0.1 < sctp: COOKIE_ECHO[flgs=0, len=..., val=...]
+0.0 > sctp: COOKIE_ACK[flgs=0]
+0.0 accept(3, ..., ...) = 4
+0.0 close(3) = 0
// Inject two fragements in the wrong order
+0.0 < sctp: I_DATA[flgs=E, len=1020, tsn=2, sid=0, mid=0, fsn=1] // -256-1000-256
+0.0 > sctp: SACK[flgs=0, cum_tsn=0, a_rwnd=8488, gaps=[2:2], dups=[]]
+0.0 < sctp: I_DATA[flgs=B, len=1020, tsn=1, sid=0, mid=0, ppid=1234] // -1000
+0.0 > sctp: SACK[flgs=0, cum_tsn=2, a_rwnd=7488, gaps=[], dups=[]]
+0.1 sctp_recvmsg(4, ..., 6000, ..., ..., {sinfo_stream=0,
                                           sinfo_ssn=0,
                                           sinfo_flags=0,
                                           sinfo_ppid=htonl(1234),
                                           sinfo_context=0,
                                           sinfo_timetolive=0,
                                           sinfo_tsn=1,
                                           sinfo_cumtsn=...,
                                           sinfo_assoc_id=...}, MSG_EOR) = 2000
// Tear down the association
+0.0 < sctp: SHUTDOWN[flgs=0, cum_tsn=0]
+0.0 > sctp: SHUTDOWN_ACK[flgs=0]
+0.0 < sctp: SHUTDOWN_COMPLETE[flgs=0]
+0.0 close(4) = 0
